{
  "name": "simple-drawing-board",
  "version": "1.4.1",
  "description": "",
  "main": "./src/simple-drawing-board.js",
  "scripts": {
    "lint": "eslint .",
    "dev": "rollup ./src/main.js -f iife -n SimpleDrawingBoard -o ./dist/simple-drawing-board.js --watch",
    "build": "rollup ./src/main.js -f iife -n SimpleDrawingBoard -o ./dist/simple-drawing-board.js",

    "_build": "npm run _bundle && npm run _min && npm run _docs",
    "_bundle": "browserify ./src/simple-drawing-board.js -s SimpleDrawingBoard -o ./dist/simple-drawing-board.js",
    "_min": "uglifyjs ./dist/simple-drawing-board.js > ./dist/simple-drawing-board.min.js",
    "_docs": "cp ./dist/simple-drawing-board.js ./docs",
    "_dev": "watchify ./src/simple-drawing-board.js -s SimpleDrawingBoard -o ./dist/simple-drawing-board.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/leader22/simple-drawing-board.js.git"
  },
  "keywords": [
    "canvas",
    "drawing",
    "drawing-board",
    "vanilla"
  ],
  "author": "leader22",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/leader22/simple-drawing-board.js/issues"
  },
  "homepage": "https://github.com/leader22/simple-drawing-board.js",
  "devDependencies": {
    "browserify": "^13.1.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "prettier": "^1.17.1",
    "rollup": "^1.12.3",
    "uglifyify": "^3.0.4",
    "watchify": "^3.7.0"
  }
}
